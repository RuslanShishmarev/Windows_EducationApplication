<Page x:Class="EducationApp.View.AllUserEducationList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationApp.View"
      xmlns:cards="clr-namespace:EducationApp.View.Cards"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllUserEducationList">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="WhiteSmoke">
            <TextBlock Text="All my education course and tests"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="30"/>            
        </Grid>
        <ScrollViewer x:Name="MyScrollViewer" 
                      Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="AllUserCards"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center">
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
